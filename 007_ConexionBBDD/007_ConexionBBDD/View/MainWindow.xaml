<Window x:Class="_007_ConexionBBDD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_007_ConexionBBDD"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnLoadDataGrid" Content="Populate Data Grid" HorizontalAlignment="Left" Margin="387,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.884,-0.64" ToolTip="Click to populate Data Grid" Cursor="UpArrow" Click="btnLoadDataGrid_Click"/>
        <DataGrid x:Name="DataGrid" ItemsSource="{Binding LoadDataBinding}"
                  HorizontalAlignment="Left" Margin="0,56,0,0" VerticalAlignment="Top" Height="255" Width="518"/>
        <TextBlock x:Name="Title_Block" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Data Grid Sample" VerticalAlignment="Top" Height="20" Width="132"/>
        <DataGrid Name="dataGridCustomers" 
                      ItemsSource="{Binding LoadDataBinding}"
                      AutoGenerateColumns="False" 
                      HorizontalAlignment="Left" 
                      Margin="14,55,0,46"
                      Width="496" 
                      CanUserResizeRows="False" 
                      >
            <!--Columns in the Data Grid-->
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=AlumnoID}" 
                                        Header="Customer #" 
                                        Width="75"
                                        IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=Nombre}" 
                                        Header="First" 
                                        Width="100"
                                        IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=Apellidos}"
                                        Header="Last"
                                        Width="100"
                                        IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=Curso}" 
                                        Header="Email" 
                                        Width="150"
                                        IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
